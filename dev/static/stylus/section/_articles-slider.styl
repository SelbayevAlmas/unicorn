.articles-slider
	.slick-arrow
		position absolute
		top 50%
		margin-top -7px
		width 15px
		height 15px
		cursor pointer
	.slick-disabled
		opacity 0
.articles-slider__item
	padding 15px 30px
	border-left 5px solid black
	span 
		display block
.articles-slider__title
	margin-bottom 10px
	font-family: boldFont
	font-size 18px
.articles-slider__info
	color lightGrayColor
.articles-slider__prev
	left -5%
	background url('../img/svg/arrow-left.svg') 0 0 no-repeat
	background-size 100%
.articles-slider__next
	right -5%
	background url('../img/svg/arrow-right.svg') 0 0 no-repeat
	background-size 100%