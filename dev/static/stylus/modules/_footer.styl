footer
	background-color mainColor
.footer
	position relative
	width 97%
	max-width 1170px
	margin 0 auto
	padding 75px 0 0px
	color footerTextColor
	a
		color footerTextColor

.footer-top
	overflow hidden
	border-bottom 1px solid darkBottomColor
	padding-bottom 15px
	margin-bottom 30px
	
.footer-logo
	margin-bottom 15px
	color #FFF
	font-size 22px
.footer-text
	margin-bottom 25px
	font-size 14px
	line-height 24px
.footer-form__line
	overflow hidden
.footer-form__input
	float left
	width 45%
	margin-right 10%
	margin-bottom 20px
	padding-bottom 8px
	border none
	border-bottom 1px solid darkBottomColor
	background none
	text-transform uppercase
	font-size 14px
	color footerTextColor
	&:last-child
		margin-right 0
.footer-form__text
	width 100%
	height 35px
	padding-bottom 8px
	border none
	border-bottom 1px solid darkBottomColor
	background none
	text-transform uppercase
	color footerTextColor
	font-size 14px
	line-height 24px
	margin-bottom 80px
.footer-form__btn
	position relative
	display inline-block
	padding-right 10px
	&:after
		content ''
		position absolute
		right 0
		top 3px
		width: 0;
		height: 0;
		border-style: solid;
		border-width: 5px 0 5px 6px;
		border-color: transparent transparent transparent #999999;

	input	
		border none
		background: none
		text-transform uppercase
		color footerTextColor
		font-size 14px
		

.footer-top__left
	float left
	width 100%
	max-width 450px
.footer-top__right
	float right
	width 100%
	max-width 600px
	overflow hidden
.footer-top__menu
	float: left
	width 30%
	margin-right 5%
	&:last-child
		margin-right 0
.footer-nav__title
	display inline-block
	text-transform uppercase
	color #FFF
	font-size 15px
	margin-bottom 22px
.footer-nav__list
	li
		margin-bottom 15px
		font-size 14px
.fotter-bottom
	padding-bottom 40px
	overflow hidden
.footer-disclaimer
	float left
	span
		display block
		margin-bottom 12px
		font-weight:  bold
		&:last-child
			margin-bottom 0
.footer-info-menu
	float right
.footer-info-menu__list
	li
		display inline-block
		vertical-align top
		margin-right 30px
		text-transform uppercase
		font-weight:  bold
		&:last-child
			margin-right 0